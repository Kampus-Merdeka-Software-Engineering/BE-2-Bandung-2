// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
 provider = "mysql"
 url      = env("DATABASE_URL")
}

generator client {
 provider = "prisma-client-js"
}

model User {
 id                 Int      @id @default(autoincrement())
 username           String
 email              String
 password           String
 favorit            Favorite[]
}

model Destination {
 id                 Int      @id @default(autoincrement())
 name_destination   String
 loc_destination    String
 desc_destination   String
 open_hours         String
 close_hours        String
 favorit            Favorite[]
}

model Contact {
 id                 Int      @id @default(autoincrement())
 email              String
 fullname           String
 message            String
}

model Favorite {
 id                 Int      @id @default(autoincrement())
 is_favorite        Boolean
 userId             Int
 destinationId      Int
 user               User        @relation(fields: [userId], references: [id])
 destinasi          Destination @relation(fields: [destinationId], references: [id])
}